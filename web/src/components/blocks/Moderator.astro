---
interface Props {
  name: string
  role?: string
  bio: string
  quote?: string
}

const { name, role, bio, quote } = Astro.props
---

<section class="moderator" id="moderator">
  <div class="moderator__layout">
    <div class="moderator__photo-wrap fade-in">
      <div class="moderator__decorative" aria-hidden="true">BEGLEITER</div>
    </div>
    <div class="moderator__content fade-in fade-in-delay-1">
      <p class="moderator__name">{name}</p>
      {role && <p class="moderator__role">{role}</p>}
      <p class="moderator__bio">{bio}</p>
      {quote && (
        <blockquote class="moderator__quote">
          <p>»{quote}«</p>
        </blockquote>
      )}
    </div>
  </div>
</section>
