---
interface Props {
  eyebrow?: string;
  name: string;
  bio: string;
  quote?: string;
  photo?: any;
}

const { eyebrow, name, bio, quote, photo } = Astro.props;
---

<section class="section moderator-section" id="moderator">
  <div class="container">
    <div class="moderator__layout">
      <div class="moderator__photo-wrapper fade-in">
        <div class="moderator__photo">
          {
            photo ? (
              <img src={photo.url} alt={photo.alt || name} loading="lazy" decoding="async" />
            ) : (
              <div class="moderator__photo-placeholder">
                <svg viewBox="0 0 24 24" aria-hidden="true">
                  <circle cx="12" cy="8" r="4" />
                  <path d="M4 20c0-4 4-6 8-6s8 2 8 6" />
                </svg>
                <span>Foto</span>
              </div>
            )
          }
        </div>
        <div class="moderator__photo-accent"></div>
      </div>

      <div class="moderator__content fade-in fade-in-delay-1">
        {eyebrow && <p class="eyebrow">{eyebrow}</p>}

        {name && <h2 class="moderator__name" set:html={name} />}

        {bio && <div class="moderator__bio" set:html={bio} />}

        {
          quote && (
            <blockquote class="moderator__quote">
              <p>{quote}</p>
            </blockquote>
          )
        }
      </div>
    </div>
  </div>
</section>
