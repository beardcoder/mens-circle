---
interface Props {
  eyebrow?: string;
  title?: string;
  items: { number?: string; title: string; text: string }[];
}

const { eyebrow, title, items } = Astro.props;
---

<section class="values-section">
  <div class="container">
    {eyebrow && <p class="eyebrow">{eyebrow}</p>}
    {title && <h2 class="section-title">{title}</h2>}
    <div class="values__grid stagger-children">
      {
        items.map((item) => (
          <div class="value-card fade-in">
            {item.number && <span class="value-card__number">{item.number}</span>}
            <h3 class="value-card__title">{item.title}</h3>
            <p class="value-card__text">{item.text}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
