---
interface Props {
  eyebrow?: string;
  title: string;
  text?: string;
  buttonText?: string;
  buttonLink?: string;
}

const { eyebrow, title, text, buttonText, buttonLink } = Astro.props;
---

<section class="section section--large cta-section">
  <div class="container">
    <div class="cta__content fade-in">
      {eyebrow && <p class="eyebrow">{eyebrow}</p>}

      <h2 class="section-title cta__title" set:html={title}></h2>

      {text && <p class="cta__text">{text}</p>}

      {buttonText && buttonLink && (
        <a
          href={buttonLink}
          class="btn btn--primary btn--large"
          data-umami-event="cta-click"
          data-umami-event-location="cta-block"
          data-umami-event-text={buttonText}
        >
          {buttonText}
        </a>
      )}
    </div>
  </div>
</section>
