---
interface Props {
  eyebrow?: string;
  title?: string;
  content: string;
}

const { eyebrow, title, content } = Astro.props;
---

<section class="section" id={title ? title.toLowerCase().replace(/\s+/g, '-') : ''}>
  <div class="container container--narrow">
    <div class="section__header fade-in">
      {eyebrow && <p class="eyebrow">{eyebrow}</p>}

      {title && <h2 class="section-title">{title}</h2>}
    </div>

    {content && (
      <div class="section__content fade-in fade-in-delay-1" set:html={content}></div>
    )}
  </div>
</section>

