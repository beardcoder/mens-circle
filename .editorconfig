# EditorConfig for TYPO3 v14.1 Extension
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# TypeScript and JavaScript
[*.{ts,js,mts,mjs}]
indent_size = 2

# CSS and related
[*.{css,scss,sass,less}]
indent_size = 2

# HTML and templates
[*.{html,htm,tmpl}]
indent_size = 2

# Fluid templates
[*.fluid.html]
indent_size = 2

# XML files (FlexForms, TCA)
[*.xml]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Package managers
[{package.json,composer.json}]
indent_size = 2

# Config files
[{.babelrc,.stylelintrc,.eslintrc,*.config.js,*.config.ts}]
indent_size = 2
