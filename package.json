{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "lint": "eslint . --fix",
        "lint:check": "eslint .",
        "typecheck": "tsc --noEmit",
        "stylelint": "stylelint \"resources/**/*.css\"",
        "format": "prettier --write \"resources/**/*.{ts,js,css}\" && bun run stylelint -- --fix",
        "format:check": "prettier --check \"resources/**/*.{ts,js,css}\""
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.0",
        "@eslint/js": "^9.39.2",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^25.0.3",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^17.0.0",
        "laravel-vite-plugin": "^2.0.1",
        "lightningcss": "^1.30.2",
        "prettier": "^3.7.4",
        "stylelint": "^16.26.1",
        "stylelint-config-recess-order": "^7.4.0",
        "stylelint-config-standard": "^39.0.1",
        "stylelint-order": "^7.0.1",
        "stylelint-use-logical": "^2.1.2",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.52.0",
        "vite": "^7.3.0",
        "vite-plugin-auto-origin": "^1.2.2"
    },
    "dependencies": {
        "@fontsource-variable/cormorant": "^5.2.8",
        "@fontsource-variable/dm-sans": "^5.2.8",
        "@fontsource-variable/playfair-display": "^5.2.8"
    }
}
