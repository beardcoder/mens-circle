{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": "./packages/mens_circle/Resources/Private/Frontend",
    "paths": {
      "@/*": ["resources/js/*"]
    }
  },
  "include": [
    "packages/mens_circle/Resources/Private/Frontend/resources/js/**/*.ts",
    "packages/mens_circle/Resources/Private/Frontend/resources/js/**/*.d.ts"
  ],
  "exclude": ["node_modules", "vendor", "public"]
}
