{
    "name": "beardcoder/mens-circle",
    "description": "The skeleton application for the Laravel framework.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "laravel",
        "framework"
    ],
    "require": {
        "php": "^8.3 || ^8.4 || ^8.5",
        "achyutn/filament-log-viewer": ">=2.1",
        "filament/filament": "^5.1.1",
        "filament/spatie-laravel-media-library-plugin": "^5.1.1",
        "filament/spatie-laravel-settings-plugin": "^5.1.1",
        "laravel/framework": "^12.49.0",
        "laravel/octane": "^2.13.5",
        "laravel/socialite": "^5.24.2",
        "laravel/tinker": "^2.11.0",
        "openplain/filament-shadcn-theme": "^1.1",
        "php-static-analysis/attributes": "^0.5.0",
        "predis/predis": "^3.3",
        "sentry/sentry-laravel": "^4.20.1",
        "seven.io/api": "^8.1",
        "shuvroroy/filament-spatie-laravel-health": "^3.2",
        "spatie/laravel-health": "^1.34.10",
        "spatie/laravel-medialibrary": "^11.17.10",
        "spatie/laravel-responsecache": "^7.7.2",
        "spatie/laravel-settings": "^3.6",
        "spatie/laravel-sitemap": "^7.3.8",
        "spatie/laravel-sluggable": "^3.7.5",
        "voku/html-min": "^4.5.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^4.0",
        "barryvdh/laravel-ide-helper": "^3.6.1",
        "driftingly/rector-laravel": "^2.1.9",
        "fakerphp/faker": "^1.24.1",
        "filament/upgrade": "^5.1.1",
        "friendsofphp/php-cs-fixer": "^3.93",
        "kitloong/laravel-migrations-generator": "^7.2",
        "larastan/larastan": "^3.9.1",
        "laravel/boost": "^2.0.3",
        "laravel/pail": "^1.2.4",
        "laravel/sail": "^1.52",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^4.3.2",
        "pestphp/pest-plugin-laravel": "^4.0",
        "php-static-analysis/rector-rule": "^0.5.0",
        "phpat/phpat": "^0.12.2",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "symplify/coding-standard": "^13.0",
        "symplify/easy-coding-standard": "^13.0.4"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade",
            "@composer outdated --direct"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74,#fbbf24\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan schedule:work\" \"npm run dev\" --names=server,queue,logs,scheduler,vite --kill-others"
        ],
        "format": [
            "php-cs-fixer fix"
        ],
        "format:check": [
            "php-cs-fixer fix --dry-run --diff"
        ],
        "rector": [
            "rector process"
        ],
        "rector:check": [
            "rector process --dry-run"
        ],
        "lint": [
            "phpstan analyse --memory-limit=512M"
        ],
        "qa": [
            "@format:check",
            "@lint",
            "@rector:check"
        ],
        "qa:fix": [
            "@format",
            "@rector"
        ],
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "bun install",
            "bun run build"
        ]
    }
}
